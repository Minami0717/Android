<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#edefef"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/resource"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/adr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우리집"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="6dp"
                    android:src="@drawable/dropdown2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <Button
                    android:id="@+id/menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/b12"/>
                <Button
                    android:id="@+id/notice"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/b13"
                    android:layout_marginHorizontal="15dp"/>
                <Button
                    android:id="@+id/my"
                    android:layout_width="20dp"
                    android:background="@drawable/b14"
                    android:layout_height="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:src="@drawable/search"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="찾는 맛집 이름이 뭐에요?"/>

        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:background="@drawable/radius"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="4dp"
                            android:src="@drawable/hashtag"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="국물의 계절"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/gra"
                        android:padding="1.2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/radius2">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="4dp"
                                android:src="@drawable/hashtag"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="쿠폰 받기"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="1dp"
                                android:src="@drawable/heart"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="@drawable/radius">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="4dp"
                            android:src="@drawable/hashtag"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="집밥"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="2dp"
                            android:src="@drawable/house"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/radius"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="4dp"
                            android:src="@drawable/hashtag"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="재주문 많아요"/>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/baemin1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="배민"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="25dp"/>
                        <ImageView
                            android:id="@+id/one"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/baemin1"
                            android:paddingTop="5dp"
                            android:src="@drawable/one"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:paddingHorizontal="4dp"
                            android:layout_toRightOf="@+id/one"
                            android:layout_marginTop="5dp"
                            android:text="이벤트"
                            android:textColor="@color/white"
                            android:background="@drawable/backred"
                            android:textSize="10dp"/>
                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/baemin1"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:text="연말엔 홈 파티!"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="최대 9천원 할인"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="149dp"
                        android:layout_height="89dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/b19" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/back"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/baedal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="배달"
                        android:textColor="@color/black"
                        android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/baedal"
                        android:layout_marginTop="5dp"
                        android:text="세상은 넓고"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t2"
                        android:text="맛집은 많다"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/chicken"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/chickenleg"
                        android:layout_toRightOf="@id/t3"
                        android:layout_below="@+id/t3"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/hamburger"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/chicken"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ricebowl"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:layout_toLeftOf="@id/chicken"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/pizza"
                        android:layout_toRightOf="@id/t2"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ramen"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
<!--                <Button-->
<!--                    android:id="@+id/baemin1"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_marginRight="5dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@drawable/b1" />-->
<!--                <Button-->
<!--                    android:id="@+id/baedal"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@drawable/b2" />-->

            </LinearLayout>

            <Button
                android:id="@+id/pojang"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/b3"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp">

                <Button
                    android:id="@+id/live"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/b4"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/present"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/b5"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/jeonguk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/b6"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/b7"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:padding="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/b8"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/b9"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/b10"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/b11"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>